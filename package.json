{
  "name": "node-blueprint",
  "version": "1.0.0",
  "type": "module",
  "description": "Node.js backend project setup tool",
  "main": "main.js",
  "bin": {
    "node-blueprint": "dist/main.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && tsc && pnpm run copy-templates",
    "copy-templates": "cp -r src/templates dist/templates",
    "postbuild": "chmod +x dist/main.js",
    "node-blueprint": "npx node-blueprint create"
  },
  "author": "Yogendra Rana <www.yogendrarana.com.np>",
  "license": "ISC",
  "dependencies": {
    "@inquirer/prompts": "^7.3.1",
    "ejs": "^3.1.10",
    "fs-extra": "^11.3.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "del": "^8.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}